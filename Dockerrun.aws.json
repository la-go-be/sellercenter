{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "letsencrypt-etc",
            "host": {
                "sourcePath": "/etc/letsencrypt"
            }
        },
        {
            "name": "letsencrypt-var-lib",
            "host": {
                "sourcePath": "/var/lib/letsencrypt"
            }
        },
        {
            "name": "letsencrypt-webroot",
            "host": {
                "sourcePath": "/tmp/letsencrypt"
            }
        },
        {
            "name": "reload-server-conf",
            "host": {
                "sourcePath": "/var/run/docker.sock"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "apis",
            "image": "lagobetech/lgbsc-backend:1.0.7",
            "environment": [
                {
                  "name": "NODE_ENV",
                  "value": "develop"
                }
            ],
            "essential": true,
            "memoryReservation": 128,
            "portMappings": [
                {
                    "hostPort": 8000,
                    "containerPort": 8000
                }
            ]
        },
        {
            "name": "www",
            "image": "lagobetech/lgbsc-frontend:1.0.16",
            "essential": true,
            "memoryReservation": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "links": [
                "apis"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "letsencrypt-etc",
                    "containerPath": "/etc/letsencrypt"
                },
                {
                    "sourceVolume": "letsencrypt-webroot",
                    "containerPath": "/tmp/letsencrypt"
                }
            ]
        },
        {
            "name": "letsencrypt",
            "image": "gordonchan/auto-letsencrypt",
            "environment": [
                {
                  "name": "DOMAINS",
                  "value": "sc.lagobe.com adm.sc.lagobe.com"
                },
                {
                  "name": "EMAIL",
                  "value": "a@lagobe.com"
                },
                {
                  "name": "SERVER_CONTAINER",
                  "value": "www"
                },
                {
                  "name": "WEBROOT_PATH",
                  "value": "/tmp/letsencrypt"
                }
            ],
            "essential": true,
            "memoryReservation": 128,
            "links": [
                "www"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "letsencrypt-etc",
                    "containerPath": "/etc/letsencrypt"
                },
                {
                    "sourceVolume": "letsencrypt-var-lib",
                    "containerPath": "/var/lib/letsencrypt"
                },
                {
                    "sourceVolume": "letsencrypt-webroot",
                    "containerPath": "/tmp/letsencrypt"
                },
                {
                    "sourceVolume": "reload-server-conf",
                    "containerPath": "/var/run/docker.sock"
                }
            ]
        },
        {
            "name": "mylineme-blog",
            "image": "wordpress",
            "environment": [
                {
                  "name": "WORDPRESS_DB_HOST",
                  "value": "mylineme-blog.c9xkyd68xrpr.ap-southeast-1.rds.amazonaws.com"
                },
                {
                  "name": "WORDPRESS_DB_USER",
                  "value": "mylineme"
                },
                {
                  "name": "WORDPRESS_DB_PASSWORD",
                  "value": "mnbvcxzA"
                },
                {
                  "name": "WORDPRESS_DB_NAME",
                  "value": "mylineme_blog"
                }
            ],
            "essential": true,
            "memoryReservation": 128,
            "portMappings": [
                {
                    "hostPort": 8080,
                    "containerPort": 80
                }
            ]
        }
    ]
}